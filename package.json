	"main": "index.js",
	"scripts": {
		"test": "cross-env NODE_ENV=test nyc jest --coverage --detectOpenHandles --forceExit",
		"test-dev": "cross-env NODE_ENV=test jest --watchAll --verbose --coverage --runInBand",
